<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.profile.settings.SettingPageOrg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/text_setting_page" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Изменить местоположение" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:id="@+id/text_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Местоположение" />

                    <TextView
                        android:id="@+id/button_change_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textStyle="bold"
                        android:onClick="change_location"
                        android:text="Изменить" />

                    <LinearLayout
                        android:id="@+id/linearLayout_change_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            app:cardBackgroundColor="@color/basic_blue"
                            app:cardCornerRadius="15dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    app:cardCornerRadius="14dp">

                                    <com.rengwuxian.materialedittext.MaterialEditText
                                        android:id="@+id/location_change_setting"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:layout_marginStart="15dp"
                                        android:fontFamily="@font/roboto"
                                        android:hint="Введите местоположение"
                                        android:inputType="text"
                                        android:textAlignment="textStart"
                                        android:textSize="16sp"
                                        app:met_floatingLabel="none"
                                        app:met_hideUnderline="true"
                                        app:met_singleLineEllipsis="false" />

                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/button_clear_cross"
                                        android:background="@color/transparent"
                                        android:layout_gravity="center_vertical|right"
                                        android:onClick="clear_location"
                                        android:layout_marginEnd="15dp"/>
                                </androidx.cardview.widget.CardView>

                            </FrameLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            app:cardBackgroundColor="@color/basic_blue"
                            app:cardCornerRadius="15dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                app:cardCornerRadius="14dp">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/change_password_setting_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="@font/roboto"
                                    android:hint="Введите пароль"
                                    android:inputType="textPassword"
                                    android:textSize="16sp"
                                    app:met_floatingLabel="none"
                                    app:met_hideUnderline="true"
                                    app:met_singleLineEllipsis="false" />

                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/button_clear_cross"
                                    android:background="@color/transparent"
                                    android:layout_gravity="center_vertical|right"
                                    android:onClick="clear_location_password"
                                    android:layout_marginEnd="15dp"/>
                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/button_save_setting"
                                android:background="@color/transparent"
                                android:layout_marginRight="150dp"/>

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/button_cancel_setting"
                                android:layout_gravity="right"
                                android:onClick="cancel_location"
                                android:background="@color/transparent"/>
                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Изменить номер телефона" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:id="@+id/text_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Номер телефона" />

                    <TextView
                        android:id="@+id/button_change_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textStyle="bold"
                        android:onClick="change_phone"
                        android:text="Изменить" />

                    <LinearLayout
                        android:id="@+id/linearLayout_change_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            app:cardBackgroundColor="@color/basic_blue"
                            app:cardCornerRadius="15dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                app:cardCornerRadius="14dp">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/phone_change_setting"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="@font/roboto"
                                    android:hint="Введите номер телефона"
                                    android:inputType="text"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp"
                                    app:met_floatingLabel="none"
                                    app:met_hideUnderline="true"
                                    app:met_singleLineEllipsis="false" />

                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/button_clear_cross"
                                    android:background="@color/transparent"
                                    android:layout_gravity="center_vertical|right"
                                    android:onClick="clear_phone"
                                    android:layout_marginEnd="15dp"/>
                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            app:cardBackgroundColor="@color/basic_blue"
                            app:cardCornerRadius="15dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                app:cardCornerRadius="14dp">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/change_password_setting_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="@font/roboto"
                                    android:hint="Введите пароль"
                                    android:inputType="textPassword"
                                    android:textSize="16sp"
                                    app:met_floatingLabel="none"
                                    app:met_hideUnderline="true"
                                    app:met_singleLineEllipsis="false" />

                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/button_clear_cross"
                                    android:background="@color/transparent"
                                    android:layout_gravity="center_vertical|right"
                                    android:onClick="clear_phone_password"
                                    android:layout_marginEnd="15dp"/>
                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/button_save_setting"
                                android:background="@color/transparent"
                                android:layout_marginRight="150dp"/>

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/button_cancel_setting"
                                android:layout_gravity="right"
                                android:onClick="cancel_phone"
                                android:background="@color/transparent"/>
                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Изменить описание" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:id="@+id/text_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Описание" />

                    <TextView
                        android:id="@+id/button_change_description"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:text="Изменить"
                        android:onClick="change_description"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linearLayout_change_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            app:cardBackgroundColor="@color/basic_blue"
                            app:cardCornerRadius="15dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                app:cardCornerRadius="14dp">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/description_change_setting"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="@font/roboto"
                                    android:hint="Введите новое описание"
                                    android:inputType="textLongMessage"
                                    android:textAlignment="textStart"
                                    android:textSize="16sp"
                                    app:met_floatingLabel="none"
                                    app:met_hideUnderline="true"
                                    app:met_singleLineEllipsis="false" />

                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/button_clear_cross"
                                    android:background="@color/transparent"
                                    android:layout_gravity="center_vertical|right"
                                    android:onClick="clear_description"
                                    android:layout_marginEnd="15dp"/>
                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            app:cardBackgroundColor="@color/basic_blue"
                            app:cardCornerRadius="15dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                app:cardCornerRadius="14dp">

                                <com.rengwuxian.materialedittext.MaterialEditText
                                    android:id="@+id/change_description_setting_pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="@font/roboto"
                                    android:hint="Введите пароль"
                                    android:inputType="textPassword"
                                    android:textSize="16sp"
                                    app:met_floatingLabel="none"
                                    app:met_hideUnderline="true"
                                    app:met_singleLineEllipsis="false" />

                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/button_clear_cross"
                                    android:background="@color/transparent"
                                    android:layout_gravity="center_vertical|right"
                                    android:onClick="clear_description_password"
                                    android:layout_marginEnd="15dp"/>
                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/button_save_setting"
                                android:background="@color/transparent"
                                android:layout_marginRight="150dp"/>

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/button_cancel_setting"
                                android:layout_gravity="right"
                                android:onClick="cancel_description"
                                android:background="@color/transparent"/>
                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <com.loopeer.shadow.ShadowView
        android:id="@+id/shadowView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shadowColor="#1A000000"
        app:shadowMarginTop="10dp"
        app:shadowRadius="10dp">

        <ImageButton
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/white"
            android:visibility="invisible" />

    </com.loopeer.shadow.ShadowView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shadowView"
        app:layout_constraintVertical_bias="1">

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="animals"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu_animal_ex" />

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="help"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu_help_ex" />

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="authorization"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu_profile" />

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:onClick="organization"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/menu_organization_ex" />

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="map"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu_map_ex" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>