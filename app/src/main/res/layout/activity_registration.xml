<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".page.profile.registr_authoriz.RegistrationActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="479dp"
        android:layout_height="354dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bird_background" />

    <LinearLayout
        android:id="@+id/linearLayoutData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.20">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            app:cardBackgroundColor="@color/basic_blue"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:cardCornerRadius="14dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/emailField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/roboto"
                    android:hint="Введите Email"
                    android:inputType="textEmailAddress"
                    android:textSize="18sp"
                    app:met_floatingLabel="none"
                    app:met_hideUnderline="true"
                    app:met_singleLineEllipsis="false" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/basic_blue"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:cardCornerRadius="14dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/nameField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/roboto"
                    android:hint="Введите имя пользователя"
                    android:inputType="textCapWords"
                    android:maxLength="50"
                    android:textSize="18sp"
                    app:met_checkCharactersCountAtBeginning="false"
                    app:met_floatingLabel="none"
                    app:met_hideUnderline="true"
                    app:met_singleLineEllipsis="false" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            app:cardBackgroundColor="@color/basic_blue"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:cardCornerRadius="14dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/passField"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/roboto"
                    android:hint="Введите пароль"
                    android:inputType="textPassword"
                    android:textSize="18sp"
                    app:met_floatingLabel="none"
                    app:met_hideUnderline="true"
                    app:met_singleLineEllipsis="false" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/basic_blue"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:cardCornerRadius="14dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/passFieldDuplicate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/roboto"
                    android:hint="Повторите пароль"
                    android:inputType="textPassword"
                    android:textSize="18sp"
                    app:met_floatingLabel="none"
                    app:met_hideUnderline="true"
                    app:met_singleLineEllipsis="false" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/buttonRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="button_registration"
            app:srcCompat="@drawable/button_register" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/text_registration" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <ImageButton
            android:id="@+id/user_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="user_register"
            app:srcCompat="@drawable/button_user" />

        <ImageButton
            android:id="@+id/org_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@color/white"
            android:onClick="org_register"
            app:srcCompat="@drawable/button_organization" />
    </LinearLayout>


    <ImageView
        android:id="@+id/textView2"
        android:onClick="authorization"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/link_account_go_in" />

</androidx.constraintlayout.widget.ConstraintLayout>