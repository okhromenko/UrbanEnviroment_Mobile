<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".page.profile.org.EditHelpPage">

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/text_edit_help_org" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView35">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto"
                android:text="Изменить тип объявления"
                android:textColor="@color/basic_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/text_change_type_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_type_ads_edit_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тип объявления"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/basic_blue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/button_change_type_ads_edit_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/roboto"
                    android:onClick="change_type_ads"
                    android:text="Изменить"
                    android:textColor="@color/basic_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>


            <LinearLayout
                android:id="@+id/layout_change_type_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_gravity="left"
                        android:onClick="btn_food"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:src="@drawable/button_food_type_ad_org" />

                    <ImageButton
                        android:id="@+id/things"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_gravity="center_horizontal"
                        android:onClick="btn_thing"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:src="@drawable/button_things_type_ad_org" />

                    <ImageButton
                        android:id="@+id/help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_gravity="right"
                        android:onClick="btn_help"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:src="@drawable/button_help_type_ad_org" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="150dp"
                        android:background="@color/transparent"
                        android:onClick="save_type_ads"
                        android:src="@drawable/button_save_setting" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@color/transparent"
                        android:onClick="cancel_type_ads"
                        android:src="@drawable/button_cancel_setting" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto"
                android:text="Изменить срок размещения"
                android:textColor="@color/basic_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/text_no_first_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Вы не можете изменить дату публикации,\nесли объявление уже было опубликовано."
                android:fontFamily="@font/roboto"
                android:textColor="@color/basic_blue"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

            <FrameLayout
                android:layout_marginTop="10dp"
                android:id="@+id/text_change_first_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_first_data_ads_edit_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Дата публикации"
                    android:textColor="@color/basic_blue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/button_change_first_data_ads_edit_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="right"
                    android:onClick="change_first_date"
                    android:text="Изменить"
                    android:textColor="@color/basic_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/layout_change_first_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/wrong_first_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:visibility="gone"
                    android:text="Дата публикации не может быть раньше текущей даты!"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/error_input_first_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="Дата введена некорректно!\nСледуйте шаблону: 'ДД.ММ.ГГГГ'."
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/basic_blue"
                    app:cardCornerRadius="15dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            app:cardCornerRadius="14dp">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/text_edit_first_date"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="40dp"
                                android:fontFamily="@font/roboto"
                                android:hint="Введите дату публикации"
                                android:inputType="date"
                                android:textAlignment="textStart"
                                android:textSize="16sp"
                                app:met_floatingLabel="none"
                                app:met_hideUnderline="true"
                                app:met_singleLineEllipsis="false" />

                            <ImageButton
                                android:id="@+id/imageButton20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_margin="10dp"
                                android:background="@color/transparent"
                                android:onClick="calendar_first"
                                android:src="@drawable/icon_calendar" />

                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="150dp"
                        android:background="@color/transparent"
                        android:onClick="save_first_date"
                        android:src="@drawable/button_save_setting" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@color/transparent"
                        android:onClick="cancel_first_date"
                        android:src="@drawable/button_cancel_setting" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/text_change_last_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_last_data_ads_edit_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Дата окончания публикации"
                    android:textColor="@color/basic_blue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/button_change_data_ads_edit_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/roboto"
                    android:onClick="change_last_date"
                    android:text="Изменить"
                    android:textColor="@color/basic_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/layout_change_last_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/basic_blue"
                    app:cardCornerRadius="15dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            app:cardCornerRadius="14dp">

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/text_edit_last_date"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="40dp"
                                android:fontFamily="@font/roboto"
                                android:hint="Введите дату завершения"
                                android:inputType="date"
                                android:textAlignment="textStart"
                                android:textSize="16sp"
                                app:met_floatingLabel="none"
                                app:met_hideUnderline="true"
                                app:met_singleLineEllipsis="false" />

                            <ImageButton
                                android:id="@+id/imageButton19"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:layout_margin="10dp"
                                android:background="@color/transparent"
                                android:onClick="calendar"
                                android:src="@drawable/icon_calendar" />

                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="150dp"
                        android:background="@color/transparent"
                        android:onClick="save_last_date"
                        android:src="@drawable/button_save_setting" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@color/transparent"
                        android:onClick="cancel_last_date"
                        android:src="@drawable/button_cancel_setting" />
                </FrameLayout>
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/roboto"
                android:text="Изменить описание"
                android:textColor="@color/basic_blue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_change_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="15dp"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/basic_blue"
                    app:cardCornerRadius="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        app:cardCornerRadius="14dp">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/text_edit_help_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="start|left"
                            android:hint="Описание"
                            android:inputType="textLongMessage|textMultiLine|textCapSentences"
                            android:lines="7"
                            android:singleLine="false"
                            android:textAlignment="textStart"
                            android:textSize="16sp"
                            app:counterEnabled="true"
                            app:met_floatingLabel="none"
                            app:met_hideUnderline="true"
                            app:met_singleLineEllipsis="false" />

                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="150dp"
                        android:background="@color/transparent"
                        android:onClick="save_description"
                        android:src="@drawable/button_save_setting" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@color/transparent"
                        android:onClick="cancel_description"
                        android:src="@drawable/button_cancel_setting" />
                </FrameLayout>
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/button_delete_ads_help"
                android:onClick="delete_edit_ads"
                android:background="@color/transparent"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

    <com.loopeer.shadow.ShadowView
        android:id="@+id/shadowView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shadowColor="#1A000000"
        app:shadowMarginTop="10dp"
        app:shadowRadius="10dp">

        <ImageButton
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/white"
            android:visibility="invisible" />

    </com.loopeer.shadow.ShadowView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shadowView"
        app:layout_constraintVertical_bias="1">

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="55dp"
            android:background="@color/white"
            android:onClick="animals"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu_animal_ex" />

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="55dp"
            android:background="@color/white"
            android:onClick="help"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu_help_ex" />

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="55dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:onClick="organization"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/menu_organization_ex" />

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="55dp"
            android:background="@color/white"
            android:onClick="authorization"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu_profile" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>